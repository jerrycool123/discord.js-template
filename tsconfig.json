{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["es6"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./build/",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2016"
  },
  "exclude": [".yarn", "build", "node_modules"],
  "include": ["**/*.ts", "**/*.d.ts"]
}
